{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "./lib",
    "composite": true,
    "rootDir": "./src",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": ["**/*.test.tsx", "./src/stories/**/*"]
}
